@using StudyVera.FrontEnd.Services.Concrats
@using StudyVera.FrontEnd.Models.Friendships
@using StudyVera.FrontEnd.Models.ProfileStats
@inject IProfileStatService ProfileStatService
@inject IFriendshipService FriendshipService

<div class="scoreboard-card shadow-sm border">
    <div class="header text-center mb-4">
        <h3 class="fw-bold mb-1">Liderlik Tablosu</h3>
        <div class="underline bg-primary mx-auto"></div>
    </div>

    <div class="input-group mb-4 shadow-sm">
        <input type="text" @bind="targetFriendName" class="form-control" placeholder="Kullanıcı adı ile arkadaş ekle..." />
        <button class="btn btn-primary" @onclick="SendFriendRequest" disabled="@isRequestSending">
            @if (isRequestSending)
            {
                <span class="spinner-border spinner-border-sm"></span>
            }
            else
            {
                <i class="bi bi-person-plus-fill"></i> 
                @(" Ekle")
            }
        </button>
    </div>

    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="alert alert-info py-2 small">@statusMessage</div>
    }

    <div class="d-flex justify-content-center mb-4">
        <div class="leaderboard-switch">
            <input type="checkbox" id="friendSwitch" @onchange="ToggleLeaderboard">
            <label for="friendSwitch" class="switch-label">
                <span class="switch-option">Global</span>
                <span class="switch-option">Arkadaşlar</span>
                <div class="switch-slider"></div>
            </label>
        </div>
    </div>

    @if (scoreBoardList == null)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2 text-secondary">Veriler getiriliyor...</p>
        </div>
    }
    else if (!scoreBoardList.Any())
    {
        <div class="alert alert-secondary">Görüntülenecek veri bulunamadı.</div>
    }
    else
    {
        <div class="list-wrapper d-flex flex-column gap-2">
            @foreach (var (player, index) in scoreBoardList.Select((value, i) => (value, i)))
            {
                <div class="player-row border @GetRankClass(index)">
                    <div class="rank-badge shadow-sm">
                        @if (index < 3)
                        {
                            <i class="bi bi-trophy-fill"></i>
                        }
                        else
                        {
                            <span>@(index + 1)</span>
                        }
                    </div>

                    <div class="name-section ms-3">
                        <span class="nickname fw-semibold">@player.NickName</span>
                    </div>

                    <div class="score-section text-end ms-auto">
                        <span class="score-value d-block fw-bold text-primary">@player.Score.ToString("N0")</span>
                        <small class="score-label fw-bold text-muted">PUAN</small>
                    </div>
                </div>
            }
        </div>
    }

    @if (pendingRequests != null && pendingRequests.Any())
    {
        <div class="pending-section mt-4 pt-3 border-top border-secondary">
            <h6 class="text-muted fw-bold mb-3 small text-uppercase">Bekleyen İstekler</h6>
            <div class="d-flex flex-column gap-2">
                @foreach (var req in pendingRequests)
                {
                    <div class="pending-row d-flex align-items-center justify-content-between p-2 rounded">
                        <div class="d-flex align-items-center">
                            <div class="avatar-sm me-2 bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center">
                                <i class="bi bi-person"></i>
                            </div>
                            <span class="fw-semibold small">@req.UserName</span>
                        </div>
                        <div class="action-buttons d-flex gap-1">
                            <button class="btn btn-sm btn-success rounded-pill px-3" @onclick="() => AcceptRequest(req.UserName)">
                                <i class="bi bi-check-lg"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private List<ScoreBoardDto>? scoreBoardList;
    private List<PendingUserDto>? pendingRequests;
    private bool showOnlyFriends = false;
    private string targetFriendName = "";
    private bool isRequestSending = false;
    private string statusMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        await LoadPendingRequests();
    }

    private async Task LoadData()
    {
        scoreBoardList = null;
        if (showOnlyFriends)
        {
            var friends = await FriendshipService.GetAllFriends();
            scoreBoardList = friends.Select(f => new ScoreBoardDto { NickName = f.UserName, Score = f.Score }).OrderByDescending(x => x.Score).ToList();
        }
        else
        {
            var results = await ProfileStatService.GetScoreBoardAsync();
            scoreBoardList = results.OrderByDescending(x => x.Score).ToList();
        }
    }

    private async Task LoadPendingRequests()
    {
        pendingRequests = await FriendshipService.GetReceivedRequests();
    }

    private async Task ToggleLeaderboard(ChangeEventArgs e)
    {
        showOnlyFriends = (bool)e.Value!;
        await LoadData();
    }

    private async Task SendFriendRequest()
    {
        if (string.IsNullOrWhiteSpace(targetFriendName)) return;
        isRequestSending = true;
        try
        {
            await FriendshipService.AddFriend(targetFriendName);
            statusMessage = "İstek gönderildi!";
            targetFriendName = "";
        }
        catch (Exception ex)
        {
            statusMessage = $"Hata: {ex.Message}";
        }
        finally
        {
            isRequestSending = false;
            _ = Task.Delay(3000).ContinueWith(_ => { statusMessage = ""; InvokeAsync(StateHasChanged); });
        }
    }

    private async Task AcceptRequest(string userName)
    {
        try
        {
            await FriendshipService.AcceptFriend(userName);
            await LoadData();
            await LoadPendingRequests();
        }
        catch (Exception ex)
        {
            statusMessage = ex.Message;
        }
    }

    

    private string GetRankClass(int index) => index switch
    {
        0 => "rank-gold",
        1 => "rank-silver",
        2 => "rank-bronze",
        _ => "rank-normal"
    };
}

