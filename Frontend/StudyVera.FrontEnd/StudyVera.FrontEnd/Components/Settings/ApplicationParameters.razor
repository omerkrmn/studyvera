@using Blazored.LocalStorage
@using StudyVera.FrontEnd.Models.UserProfile
@using StudyVera.FrontEnd.Services.Concrats
@inject IUserProfileService ProfileService
@inject ILocalStorageService LocalStorage

<div class="card border-0 shadow-sm rounded-4">
    <div class="card-header bg-transparent border-0 pt-4 px-4">
        <h4 class="fw-bold"><i class="bi bi-sliders2-vertical me-2 text-primary"></i>Uygulama Parametreleri</h4>
        <p class="text-muted small">Çalışma deneyiminizi kişiselleştirin.</p>
    </div>

    <div class="card-body p-4">
        <EditForm Model="@parameters" OnValidSubmit="SaveChanges">
            <div class="row g-4">
                <div class="col-md-6">
                    <h6 class="fw-bold mb-3 text-uppercase small text-primary">Çalışma Hedefleri</h6>

                    <div class="form-floating mb-3">
                        <InputNumber class="form-control" @bind-Value="parameters.DailyStudyMinuteGoal" id="goalTime" />
                        <label for="goalTime">Günlük Hedef Süre (Dakika)</label>
                    </div>

                    <div class="form-floating mb-3">
                        <InputNumber class="form-control" @bind-Value="parameters.WeeklyQuestionGoal" id="goalCount" />
                        <label for="goalCount">Haftalık Hedef Soru Sayısı</label>
                    </div>

                    <div class="form-floating mb-3">
                        <InputNumber class="form-control" @bind-Value="parameters.DailyReminderHour" id="reminderHour" min="0" max="23" />
                        <label for="reminderHour">Günlük Hatırlatıcı Saati (0-23)</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <h6 class="fw-bold mb-3 text-uppercase small text-primary">Tercihler ve Gizlilik</h6>

                    <div class="form-floating mb-3">
                        <InputSelect @bind-Value="parameters.Theme" class="form-select" id="themeSelect">
                            <option value="Light">Aydınlık Tema</option>
                            <option value="Dark">Karanlık Tema</option>
                        </InputSelect>
                        <label for="themeSelect">Uygulama Teması</label>
                    </div>

                    <div class="form-check form-switch mb-2">
                        <InputCheckbox class="form-check-input" @bind-Value="parameters.IsProfilePublic" id="isPublic" />
                        <label class="form-check-label" for="isPublic">Profilim Herkese Açık</label>
                    </div>

                    <div class="form-check form-switch mb-2">
                        <InputCheckbox class="form-check-input" @bind-Value="parameters.ShowRankInLeaderboard" id="showRank" />
                        <label class="form-check-label" for="showRank">Sıralamamı Skor Tablosunda Göster</label>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <InputCheckbox class="form-check-input" @bind-Value="parameters.AllowFriendRequests" id="allowFriends" />
                        <label class="form-check-label" for="allowFriends">Arkadaşlık İsteklerine İzin Ver</label>
                    </div>

                    <div class="mt-2">
                        <span class="badge bg-info text-dark">Ünvan: @(string.IsNullOrEmpty(parameters.CurrentTitle) ? "Yeni Üye" : parameters.CurrentTitle)</span>
                    </div>
                </div>
            </div>

            <div class="mt-4 pt-3 border-top d-flex align-items-center justify-content-between">
                <div class="text-muted small">
                    Son güncelleme: @parameters.UpdatedAt.ToLocalTime().ToString("g")
                </div>
                <button class="btn btn-primary btn-lg px-5 rounded-pill shadow-sm" type="submit" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>Kaydediliyor...</span>
                    }
                    else
                    {
                        <i class="bi bi-check2-circle me-2"></i>
                    
                        <span>Ayarları Güncelle</span>
                    }
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private UserProfileDto parameters = new();
    private bool isSaving = false;
    private const string CacheKey = "user_profile_data";

    protected override async Task OnInitializedAsync()
    {
        // Servisimiz zaten önce LocalStorage'a bakıp yoksa API'ye gidiyor.
        var result = await ProfileService.GetProfileAsync();

        if (result != null)
        {
            parameters = result;
        }
    }

    private async Task SaveChanges()
    {
        isSaving = true;

        try
        {
            // Backend'e PATCH isteği atar
            await ProfileService.UpdateProfileAsync(parameters);

            // Başarılı olursa LocalStorage'ı günceller (Cache synchronization)
            await LocalStorage.SetItemAsync(CacheKey, parameters);

            // Burada kullanıcıya başarılı olduğuna dair bir bildirim tetiklenebilir.
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Profil güncelleme sırasında hata: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }
}