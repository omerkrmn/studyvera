@page "/history"
@using StudyVera.FrontEnd.Components
@using StudyVera.FrontEnd.Enums
@using StudyVera.FrontEnd.Models.UserActivityHistories
@using StudyVera.FrontEnd.Services.Concrats
@inject IUserHistoryService Service

<PageTitle>StudyVera - History</PageTitle>



<h3 class="mt-3 mb-4 text-center text-info">User Activity History</h3>

<div class="card shadow-sm mb-4 text-center">
    <div class="card-body">
        <h5 class="card-title text-primary mb-3">Activity Table</h5>
        <Heatmap></Heatmap>
    </div>
</div>

@if (_histories is null)
{
    <p class="text-center text-muted">Loading...</p>
}
else if (!_histories.Any())
{
    <p class="text-center text-muted">No activity history found.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Activity Type</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var history in _histories)
                {
                    <tr>
                        <td>@history.Id</td>
                        <td>@history.ActivityDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            @switch (history.ActivityType)
                            {
                                case ActivityType.UserLogins:
                                    @("Giriş Yaptı")
                                    break;

                                case ActivityType.LessonCompleted:
                                    @("Ders Tamamladı")
                                    break;

                                case ActivityType.LessonProgressed:
                                    @("Derste İlerleme Kaydetti")
                                    break;

                                case ActivityType.SolvedAQuestion:
                                    @("Soru Çözdü")
                                    break;

                                case ActivityType.ProfileUpdated:
                                    @("Profil Güncelledi")
                                    break;

                                default:
                                    @("Bilinmeyen Aktivite")
                                    break;
                            }
                        </td>

                        <td>@history.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<UserActivityHistoryDto>? _histories;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _histories = await Service.GetAll();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching history: {ex.Message}");
            _histories = new();
        }
    }
}
